<Window x:Class="DroneNien.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DroneNien"
        mc:Ignorable="d"
        Title="Drone Control System" 
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
    >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E1E2F " Offset="0.0"/>
                <GradientStop Color="#73C269" Offset="0.5"/>
                <GradientStop Color="#2E2E3E" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Control Panel -->
        <StackPanel Grid.Column="0" Margin="10">
            <GroupBox Header="Main Function" Margin="0,0,0,10">
                <StackPanel Margin="5">
                    <Button x:Name="btnChonVungTuanTra" 
                            Content="Chọn vùng tuần tra" 
                            Margin="0,5" 
                            Click="btnChonVungTuanTra_Click"/>
                    
                    <!-- Chức năng này chưa hoàn thiện
                    <Button x:Name="btnHienThiDuongBay" 
                            Content="Hiển thị đường bay"
                            Margin="0, 5"
                            Click="btnHienThiDuongBay_Click"/>
                    -->
                    
                    <Button x:Name="btnLoadPython" 
                            Content="Cất cánh" 
                            Margin="0,5" 
                            Click="btnLoadPythonFile_Click"/>
                    <!-- Chức năng này không cần thiết nữa
                    <Button x:Name="btnAdvance" 
                            Content="Advance" 
                            Margin="0, 5" 
                            Click="btnAdvance_Click"/>
                    <StackPanel Name="AditionalFunction" Visibility="Collapsed" Margin="0, 5">
                        <Button Content="Option 1" Background="Brown" Margin="20, 5, 5, 5"/>
                        <Button Content="Option 2" Background="Brown" Margin="20, 5, 5, 5"/>
                        <Button Content="Option 3" Background="Brown" Margin="20, 5, 5, 5"/>
                        <Button Content="Option 4" Background="Brown" Margin="20, 5, 5, 5"/>
                        <Button Content="Option 5" Background="Brown" Margin="20, 5, 5, 5"/>
                    </StackPanel>
                    -->

                    <Button x:Name="btnManHinhNhanDien" 
                            Content="Nhận diện đối tượng" 
                            Margin="0,5" 
                            Click="btnManHinhNhanDien_Click"/>

                    <Button x:Name="btnManHinhUnreal"
                            Content="Hình ảnh Real-time"
                            Margin="0, 5" 
                            Click="btnManHinhUnreal_Click"/>

                    <Button x:Name="btnChonDoiTuong"
                            Content="Chọn đối tượng"
                            Margin="0, 5" 
                            Click="btnChonDoiTuong_Click"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Button exit -->
        <Button Grid.Row="1" Content="Thoát" 
                VerticalAlignment="Bottom" 
                Margin="21, 10, 21, 10" 
                HorizontalAlignment="Left"
                
                Width="80"
                
                Click="btnExit_Click"/>

        <!-- Map and Visualization Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="140"/>
            </Grid.RowDefinitions>

            <!--Truyền tham số ở đây-->
            <Border Grid.Row="0" 
                    CornerRadius="5" 
                    BorderThickness="1" 
                    BorderBrush="Gray" 
                    Margin="10, 20, 10, 5"
                    Name="Display">
                <Frame Name="MainFrame" 
                       NavigationUIVisibility="Hidden"/>
            </Border>

            <!-- Status and Telemetry -->
            <GroupBox Grid.Row="1" Header="Telemetry" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="5">
                        <TextBlock Text="Altitude:"/>
                        <TextBlock x:Name="txtAltitude" Text="{Binding AltitudeWithUnit}"/>
                        <TextBlock Text="Speed:"/>
                        <TextBlock x:Name="txtSpeed" Text="{Binding SpeedWithUnit}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5">
                        <TextBlock Text="Battery:"/>
                        <TextBlock x:Name="txtBattery" Text="{Binding BatteryWithUnit}"/>
                        <TextBlock Text="GPS:"/>
                        <TextBlock x:Name="txtGPS" Text="{Binding GPSWithUnit}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5">
                        <TextBlock Text="Status:"/>
                        <TextBlock x:Name="txtStatus" Text="{Binding Status}"/>
                        <TextBlock Text="Mode:"/>
                        <TextBlock x:Name="txtMode" Text="{Binding Mode}"/>
                    </StackPanel>
                </Grid>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
